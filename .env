# ========================================
# Maricafe Snack App - Environment Variables
# ========================================

# SERVER CONFIGURATION
# Port number for Express/Node.js server (default: 5505)
PORT=5505

# Node environment (development, production, test)
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=false

# ========================================
# DATABASE CONFIGURATION
# ========================================

# SQLite database file path (relative or absolute)
DATABASE_PATH=./snack_dashboard.db

# Database connection timeout (milliseconds)
DATABASE_TIMEOUT=5000

# Enable database verbose logging (true/false)
DATABASE_VERBOSE=false

# ========================================
# API CONFIGURATION
# ========================================

# API Base URL for frontend (relative path)
API_BASE=/api

# API version
API_VERSION=v1

# Maximum request body size (e.g., 10mb)
REQUEST_SIZE_LIMIT=10mb

# File upload size limit
FILE_UPLOAD_LIMIT=5242880

# ========================================
# CORS CONFIGURATION
# ========================================

# CORS allowed origins (comma-separated, or * for all)
CORS_ORIGIN=*

# CORS allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# CORS allowed credentials
CORS_CREDENTIALS=true

# ========================================
# SOCKET.IO CONFIGURATION
# ========================================

# Socket.IO transports
SOCKETIO_TRANSPORTS=websocket,http_long_polling

# Enable Socket.IO logging
SOCKETIO_DEBUG=false

# Socket.IO connection timeout (milliseconds)
SOCKETIO_CONNECT_TIMEOUT=10000

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# Frontend static file directory (relative or absolute)
STATIC_FILES_DIR=./

# App title
APP_TITLE=Maricafe Snack Shop

# App version
APP_VERSION=1.2.1

# ========================================
# PAYMENT & COMMERCE
# ========================================

# Default tax rate (as decimal: 0.1 = 10%)
TAX_RATE=0.1

# COD (Cash on Delivery) surcharge rate (as decimal: 0.03 = 3%)
COD_SURCHARGE_RATE=0.03

# Supported payment methods (comma-separated)
PAYMENT_METHODS=mtn,airtel,marzpay,cod

# ========================================
# CONTACT & SUPPORT
# ========================================

# Support/Contact email
CONTACT_EMAIL=support@maricafe.com

# Support phone number
CONTACT_PHONE=+256744759181

# Support WhatsApp number
CONTACT_WHATSAPP=+256744759181

# ========================================
# STORAGE & CACHE
# ========================================

# localStorage key prefix (for frontend)
STORAGE_KEY_PREFIX=maricafe

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# ========================================
# LOGGING & MONITORING
# ========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable console logging
CONSOLE_LOG=true

# Log file path (optional, set to empty to disable file logging)
LOG_FILE=./logs/app.log

# ========================================
# SECURITY
# ========================================

# Enable HTTPS only (production should be true)
HTTPS_ONLY=false

# Disable insecure headers in production
DISABLE_INSECURE_HEADERS=false

# ========================================
# FEATURE FLAGS
# ========================================

# Enable PWA (Progressive Web App) features
ENABLE_PWA=true

# Enable service worker
ENABLE_SERVICE_WORKER=true

# Enable offline mode
ENABLE_OFFLINE_MODE=true

# Enable real-time notifications (Socket.IO)
ENABLE_REALTIME=true

# Enable product discounts
ENABLE_DISCOUNTS=true

# Enable user messaging
ENABLE_MESSAGING=true

# Enable order tracking
ENABLE_ORDER_TRACKING=true

# ========================================
# DEVELOPMENT ONLY
# ========================================

# Seed database with sample data on startup
SEED_DATABASE=true

# Auto-reload server on file changes (nodemon)
AUTO_RELOAD=true

# ========================================
# DEPLOYMENT NOTES
# ========================================
# 
# For Production Deployment:
# - Set NODE_ENV=production
# - Set HTTPS_ONLY=true
# - Change CORS_ORIGIN to your actual domain(s)
# - Set DATABASE_PATH to persistent location
# - Ensure DATABASE_TIMEOUT and SOCKETIO_CONNECT_TIMEOUT are reasonable
# - Set LOG_FILE to a writable directory
# - Disable SEED_DATABASE=false to preserve data
# - Set DEBUG=false and CONSOLE_LOG=false for performance
# 
# Example Production Setup:
# NODE_ENV=production
# PORT=443
# CORS_ORIGIN=https://yourdomain.com
# DATABASE_PATH=/var/lib/myapp/snack_dashboard.db
# HTTPS_ONLY=true
# LOG_FILE=/var/log/myapp/app.log
# AUTO_RELOAD=false
# SEED_DATABASE=false
# ========================================
